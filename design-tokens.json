{
  "$schema": "https://json-schema.org/draft-07/schema",
  "name": "Luxury Auto Repair Design System",
  "version": "1.0.0",
  "description": "Design tokens for European luxury auto repair website, based on Mercedes-Benz official design guidelines",

  "colors": {
    "primary": {
      "black": {
        "value": "#000000",
        "description": "Mercedes-Benz official deep black - backgrounds, text",
        "usage": ["background", "text", "stage"]
      },
      "white": {
        "value": "#FFFFFF",
        "description": "Pure white - text on dark backgrounds, keylines",
        "usage": ["text", "keyline", "buttons"]
      },
      "blue": {
        "value": "#00ADEF",
        "description": "Mercedes-Benz official blue - CTA buttons, highlights",
        "usage": ["cta", "links", "highlights"]
      }
    },

    "gradients": {
      "forest": {
        "value": "linear-gradient(135deg, #0a1f1f 0%, #1a1a1a 50%, #000000 100%)",
        "description": "German forest gradient - Maybach slide",
        "usage": ["hero-background"]
      },
      "city": {
        "value": "linear-gradient(135deg, #0a0f1f 0%, #1a1a1a 50%, #000000 100%)",
        "description": "City night gradient - S-Class slide",
        "usage": ["hero-background"]
      },
      "track": {
        "value": "linear-gradient(135deg, #1f0a0a 0%, #1a1a1a 50%, #000000 100%)",
        "description": "Track gradient - AMG slide",
        "usage": ["hero-background"]
      },
      "gold": {
        "value": "linear-gradient(135deg, #2a2010 0%, #1a1a1a 50%, #000000 100%)",
        "description": "Gold gradient - Rolls-Royce slide",
        "usage": ["hero-background"]
      },
      "grey": {
        "value": "linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 50%, #000000 100%)",
        "description": "Grey gradient - Porsche slide",
        "usage": ["hero-background"]
      },
      "overlayBottom": {
        "value": "linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 50%, transparent 100%)",
        "description": "Bottom overlay for readable text on images",
        "usage": ["image-overlay"]
      },
      "overlayTop": {
        "value": "linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 50%, transparent 100%)",
        "description": "Top overlay for headers",
        "usage": ["image-overlay"]
      }
    },

    "future": {
      "blue": {
        "value": "#5B8FFF",
        "description": "Neon blue - EQ future accent",
        "usage": ["accent", "hover"]
      },
      "purple": {
        "value": "#6B5FFF",
        "description": "Purple - carousel indicators",
        "usage": ["accent", "indicators"]
      },
      "cyan": {
        "value": "#00E5FF",
        "description": "Cyan - highlights",
        "usage": ["accent"]
      },
      "neonGradient": {
        "value": "linear-gradient(135deg, #5B8FFF 0%, #6B5FFF 100%)",
        "description": "Neon gradient",
        "usage": ["special-elements"]
      }
    },

    "luxury": {
      "gold": {
        "value": "#D4AF37",
        "description": "Gold accent - stars, badges",
        "usage": ["accent", "luxury-markers"]
      },
      "goldLight": {
        "value": "#F8E45C",
        "description": "Light gold",
        "usage": ["accent"]
      },
      "silver": {
        "value": "#C0C0C0",
        "description": "Silver",
        "usage": ["accent"]
      }
    },

    "text": {
      "primary": {
        "value": "#FFFFFF",
        "description": "Primary text on dark backgrounds",
        "usage": ["headings", "body-text"]
      },
      "secondary": {
        "value": "rgba(255, 255, 255, 0.85)",
        "description": "Secondary text",
        "usage": ["subtitles", "descriptions"]
      },
      "tertiary": {
        "value": "rgba(255, 255, 255, 0.6)",
        "description": "Tertiary text",
        "usage": ["captions", "labels"]
      },
      "disabled": {
        "value": "rgba(255, 255, 255, 0.3)",
        "description": "Disabled state",
        "usage": ["disabled-elements"]
      },
      "onWhite": {
        "value": "#000000",
        "description": "Text on white backgrounds",
        "usage": ["testimonials", "light-cards"]
      },
      "onWhiteSecondary": {
        "value": "#666666",
        "description": "Secondary text on white",
        "usage": ["descriptions"]
      }
    },

    "stage": {
      "barHeight": {
        "value": "24px",
        "description": "Mercedes-Benz official stage bar height",
        "usage": ["top-bar", "bottom-bar"]
      },
      "keylineHeight": {
        "value": "1px",
        "description": "White keyline separator",
        "usage": ["separator"]
      }
    }
  },

  "typography": {
    "fontFamilies": {
      "headline": {
        "value": "'Inter Tight', 'Roboto Condensed', Arial, sans-serif",
        "description": "Headline font - condensed, modern (substitute for Corpo A)",
        "usage": ["h1", "h2", "hero-titles"]
      },
      "body": {
        "value": "'Inter', 'Roboto', Arial, sans-serif",
        "description": "Body font - clean, readable (substitute for Corpo S)",
