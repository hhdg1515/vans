      },
      "corpoA": {
        "value": "'Corpo A Condensed', Arial, sans-serif",
        "description": "Mercedes-Benz official headline font (if licensed)",
        "usage": ["official-headings"]
      },
      "corpoS": {
        "value": "'Corpo S', Arial, sans-serif",
        "description": "Mercedes-Benz official body font (if licensed)",
        "usage": ["official-body"]
      }
    },

    "fontSizes": {
      "xxl": {
        "value": "64px",
        "description": "Extra extra large - Hero main titles",
        "usage": ["hero-h1"]
      },
      "xl": {
        "value": "40px",
        "description": "Extra large - Section titles",
        "usage": ["section-h2"]
      },
      "lg": {
        "value": "32px",
        "description": "Large - Card large titles",
        "usage": ["card-h3"]
      },
      "md": {
        "value": "24px",
        "description": "Medium - Card small titles",
        "usage": ["card-h4"]
      },
      "base": {
        "value": "18px",
        "description": "Base - Body text",
        "usage": ["p", "body"]
      },
      "sm": {
        "value": "16px",
        "description": "Small - Buttons, small body",
        "usage": ["button", "small-text"]
      },
      "xs": {
        "value": "14px",
        "description": "Extra small - Labels, captions",
        "usage": ["label", "caption"]
      },
      "xxs": {
        "value": "12px",
        "description": "Extra extra small - Copyright, fine print",
        "usage": ["copyright", "fine-print"]
      }
    },

    "lineHeights": {
      "tight": {
        "value": 1.1,
        "description": "Tight line height for large headlines",
